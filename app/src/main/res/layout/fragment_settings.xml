<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"> <!-- Margen superior para evitar notch -->

        <!-- Título Configuración -->
        <TextView
            android:id="@+id/title_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Spinner para Idioma -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idioma"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Sección Historial de Limpiezas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Limpiezas"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/button_view_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Historial"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textColor="@android:color/white" />

        <!-- Sección Datos de la Piscina -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos de la Piscina"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/button_reset_pool_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reestablecer Datos"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textColor="@android:color/white" />

        <!-- Spinner para Frecuencia de Limpieza -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frecuencia de Limpieza"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_cleaning_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Notificaciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alertas Personalizadas"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp" />

        <Switch
            android:id="@+id/switch_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilitar Notificaciones"
            android:paddingBottom="8dp" />

        <!-- Detalle de Alertas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurar notificaciones para realizar tareas como:"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Medir el PH." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Agregar cloro." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Revisar la temperatura del agua." />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
