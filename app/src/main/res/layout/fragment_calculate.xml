<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="?attr/actionBarSize">

    <!-- Mensaje inicial -->
    <TextView
        android:id="@+id/textViewNoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay datos registrados para la piscina."
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <!-- Grupo para mostrar datos guardados -->
    <LinearLayout
        android:id="@+id/savedDataGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSavedShape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forma: Rectangular"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSavedDimensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dimensiones: 8 x 4 x 2 m"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSavedFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frecuencia: cada 7 días"
            android:textSize="16sp" />

        <!-- Botones para cálculos -->
        <Button
            android:id="@+id/btnCalculateVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcular Volumen"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnCalculateCleaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcular Limpieza"
            android:layout_marginTop="8dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Grupo para formulario de ingreso -->
    <LinearLayout
        android:id="@+id/formGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etShape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Forma de la piscina" />

        <EditText
            android:id="@+id/etLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitud (m)" />

        <EditText
            android:id="@+id/etWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ancho (m)" />

        <EditText
            android:id="@+id/etDepth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profundidad (m)" />

        <EditText
            android:id="@+id/etFrecuency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frecuencia de limpieza (días)" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar datos"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>